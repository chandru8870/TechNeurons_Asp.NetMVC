@model IEnumerable<TechNeurons_Asp.NetMVC.Models.Employee>

@{
    ViewBag.Title = "Index";
}


<p>
    @Html.ActionLink("Create Employee", "Create", null, new { @class = "btn btn-primary" })
</p>

@if(TempData["Alert_Message"] != null)
            {
                <div class="alert alert-success">
                    <strong>Success !</strong>@TempData["Alert_Message"]
                </div>
            }

<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Emp_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Job_Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salary)
        </th>
        <th>Action</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Emp_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Age)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Job_Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Salary)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Emp_Id }, new { @class = "btn btn-primary btnStyle" }) 
            @Html.ActionLink("Details", "Details", new { id=item.Emp_Id }, new { @class = "btn btn-success btnStyle" })
            @Html.ActionLink("Delete", "Delete", new { id=item.Emp_Id }, new { @class = "btn btn-danger btnStyle" })
        </td>
    </tr>
}

</table>
